{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ES6",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "@lib/debug": ["./lib/debug/index"],
      "@lib/dom": ["./lib/dom/index"],
      "@lib/i18n": ["./lib/i18n/index"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "lib",
    "src"
  ]
}
